import { useState } from 'react';
import { supabase } from '../utils/supabaseClient';

export default function Signup() {
  const [email, setEmail] = useState('');
  const [password, setPassword] = useState('');
  const [username, setUsername] = useState('');

  const handleSignup = async (e) => {
    e.preventDefault();
    
    // --- ุงูุณุทุฑ ุงููุถุงู ููุง ---
    alert("ุจุฏุฃ ุชุดุบูู ุฏุงูุฉ ุงูุชุณุฌูู ุจูุฌุงุญ! ุฌุงุฑู ุงูุงุชุตุงู ุจุณูุจุงุจูุณ...");
    // ------------------------

    const { data, error } = await supabase.auth.signUp({ 
      email, 
      password,
      options: {
        data: {
          username: username, 
        }
      }
    });

    if (error) {
      alert(`ูุดู ุงูุชุณุฌูู ูู ุทุฑู ุณูุจุงุจูุณ: ${error.message}`);
    } else {
      alert('ุชู ุฅุฑุณุงู ุฑุงุจุท ุงูุชุฃููุฏ! ุชููุฏ ุจุฑูุฏู ุงูุฅููุชุฑููู ๐ง');
    }
  };

  return (
    <div style={{ padding: '20px', textAlign: 'center' }}>
      <h1>ุฅูุดุงุก ุญุณุงุจ ุฌุฏูุฏ ๐ฎ</h1>
      <form onSubmit={handleSignup}>
        
        <input 
          type="text" 
          placeholder="ุงุณู ุงููุณุชุฎุฏู" 
          required
          onChange={(e) => setUsername(e.target.value)} 
          style={{ display: 'block', margin: '10px auto', padding: '10px' }}
        />

        <input 
          type="email" 
          placeholder="ุงูุจุฑูุฏ ุงูุฅููุชุฑููู" 
          required
          onChange={(e) => setEmail(e.target.value)} 
          style={{ display: 'block', margin: '10px auto', padding: '10px' }}
        />
        
        <input 
          type="password" 
          placeholder="ูููุฉ ุงูุณุฑ" 
          required
          onChange={(e) => setPassword(e.target.value)} 
          style={{ display: 'block', margin: '10px auto', padding: '10px' }}
        />
        
        <button type="submit" style={{ padding: '10px 20px', cursor: 'pointer' }}>
          ุณุฌู ุงูุขู
        </button>
      </form>
    </div>
  );
}

